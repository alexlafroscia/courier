{
  "name": "courier",
  "displayName": "courier",
  "description": "Quick coding environments in VSCode, based on Parcel",
  "version": "0.0.1",
  "license": "MIT",
  "publisher": "alexlafroscia",
  "engines": {
    "vscode": "^1.24.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/.courier-project",
    "onCommand:courier.createProject"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "courier.createProject",
        "title": "Create Project",
        "category": "Courier"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.3",
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "electron-rebuild": "^1.7.3",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "fs-extra": "^6.0.1",
    "parcel-bundler": "github:alexlafroscia/parcel#without-deasync"
  }
}
